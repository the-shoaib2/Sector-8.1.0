{
  "name": "@synapse/database",
  "version": "1.0.0",
  "description": "Database layer for Synapse platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "db:migrate": "ts-node src/scripts/run-migrations.ts",
    "db:seed": "ts-node src/scripts/seed-database.ts",
    "db:generate": "typeorm migration:generate -d src/config/data-source.ts",
    "db:run": "typeorm migration:run -d src/config/data-source.ts",
    "db:revert": "typeorm migration:revert -d src/config/data-source.ts"
  },
  "dependencies": {
    "@synapse/common": "workspace:*",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "reflect-metadata": "^0.1.13",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.5"
  }
}
