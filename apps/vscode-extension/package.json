{
  "name": "sector-learning-platform",
  "displayName": "Sector Learning Platform",
  "description": "Universal Intelligent Learning & Coding Assistant for VS Code",
  "version": "1.0.0",
  "publisher": "sector",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "learning",
    "coding",
    "ai",
    "visualization",
    "compiler",
    "ml",
    "education"
  ],
  "activationEvents": [
    "onCommand:sector.login",
    "onCommand:sector.openProject",
    "onCommand:sector.showAssistant",
    "onCommand:sector.visualizeCode",
    "onCommand:sector.analyzeContext",
    "onWebviewPanel:sector.visualization"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sector.login",
        "title": "Sector: Login",
        "category": "Sector"
      },
      {
        "command": "sector.logout",
        "title": "Sector: Logout",
        "category": "Sector"
      },
      {
        "command": "sector.openProject",
        "title": "Sector: Open Project",
        "category": "Sector"
      },
      {
        "command": "sector.showAssistant",
        "title": "Sector: AI Assistant",
        "category": "Sector"
      },
      {
        "command": "sector.visualizeCode",
        "title": "Sector: Visualize Code",
        "category": "Sector"
      },
      {
        "command": "sector.analyzeContext",
        "title": "Sector: Analyze Context",
        "category": "Sector"
      },
      {
        "command": "sector.exportVisualization",
        "title": "Sector: Export Visualization",
        "category": "Sector"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sector.login",
          "when": "!sector.isAuthenticated"
        },
        {
          "command": "sector.logout",
          "when": "sector.isAuthenticated"
        },
        {
          "command": "sector.openProject",
          "when": "sector.isAuthenticated"
        },
        {
          "command": "sector.showAssistant",
          "when": "sector.isAuthenticated"
        },
        {
          "command": "sector.visualizeCode",
          "when": "sector.isAuthenticated"
        },
        {
          "command": "sector.analyzeContext",
          "when": "sector.isAuthenticated"
        }
      ],
      "editor/context": [
        {
          "command": "sector.visualizeCode",
          "when": "sector.isAuthenticated && editorTextFocus",
          "group": "sector"
        },
        {
          "command": "sector.analyzeContext",
          "when": "sector.isAuthenticated && editorTextFocus",
          "group": "sector"
        }
      ]
    },
    "configuration": {
      "title": "Sector Learning Platform",
      "properties": {
        "sector.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "Sector API server URL"
        },
        "sector.autoLogin": {
          "type": "boolean",
          "default": true,
          "description": "Automatically login on startup"
        },
        "sector.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications from Sector"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sector",
          "title": "Sector Learning",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "sector": [
        {
          "id": "sector.projects",
          "name": "Projects",
          "when": "sector.isAuthenticated"
        },
        {
          "id": "sector.assistant",
          "name": "AI Assistant",
          "when": "sector.isAuthenticated"
        },
        {
          "id": "sector.visualizations",
          "name": "Visualizations",
          "when": "sector.isAuthenticated"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext .ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@sector/common": "workspace:*",
    "axios": "^1.6.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  }
}

