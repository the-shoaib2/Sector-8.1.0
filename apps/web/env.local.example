# Synapse Learning Platform Environment Configuration
# Copy this file to .env.local and modify with your actual values

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/synapse_db"

# OAuth Configuration (Optional - for future use)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Synapse
NEXT_PUBLIC_APP_VERSION=1.0.0

# VS Code Extension Integration
NEXT_PUBLIC_EXTENSION_ID=synapse.synapse-learning-platform
NEXT_PUBLIC_EXTENSION_NAME=Synapse Learning Platform
